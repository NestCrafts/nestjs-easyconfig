{
  "name": "nestjs-easyconfig",
  "version": "2.7.3",
  "description": "Add configs to nestjs with auto type parsing",
  "author": "Rubin Bhandari <roobin.bhandari@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubiin/nestjs-easyconfig"
  },
  "bugs": "https://github.com/rubiin/nestjs-easyconfig/issues",
  "keywords": [
    "nestjs",
    "config",
    "easyconfig"
  ],
  "main": "dist/index.js",
  "scripts": {
    "commit": "npx cz",
    "build": "rm -rf ./dist && tsc",
    "postinstall": "npm run  build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "lint-fix": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test:watch": "jest --watch",
    "test": "jest --config ./test/jest.json",
    "coverage": "jest --coverage",
    "coveralls": "yarn run coverage --coverageReporters=text-lcov | coveralls"
  },
  "peerDependencies": {
    "@nestjs/common": ">7.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.2.6",
    "@nestjs/core": "^10.2.6",
    "@nestjs/testing": "10.2.6",
    "@types/jest": "29.5.5",
    "@types/node": "20.8.0",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
