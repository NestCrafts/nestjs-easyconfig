{
	"name": "nestjs-easyconfig",
	"version": "2.6.0",
	"description": "Add configs to nestjs with auto type parsing",
	"author": "Rubin Bhandari <roobin.bhandari@gmail.com>",
	"license": "MIT",
	"readmeFilename": "README.md",
	"scripts": {
		"commit": "npx cz",
		"build": "rm -rf ./dist && tsc",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint '{src,apps,libs,test}/**/*.ts'",
		"lint-fix": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
		"test:watch": "jest --watch",
		"test": "jest --config ./test/jest.json",
		"coverage": "jest --coverage",
		"coveralls": "yarn run coverage --coverageReporters=text-lcov | coveralls"
	},
	"keywords": [
		"nestjs",
		"config",
		"easyconfig"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/rubiin/nestjs-easyconfig"
	},
	"bugs": "https://github.com/rubiin/nestjs-easyconfig/issues",
	"dependencies": {
		"dotenv": "^16.0.1",
		"dotenv-expand": "^8.0.3"
	},
	"peerDependencies": {
		"@nestjs/common": ">7.0.0"
	},
	"devDependencies": {
		"@nestjs/common": "^9.0.11",
		"@nestjs/core": "^9.0.11",
		"@nestjs/testing": "9.0.11",
		"@types/jest": "28.1.7",
		"@types/node": "18.7.6",
		"@typescript-eslint/eslint-plugin": "5.33.1",
		"@typescript-eslint/parser": "5.33.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"husky": "^8.0.1",
		"jest": "28.1.3",
		"lint-staged": "^13.0.3",
		"prettier": "2.7.1",
		"reflect-metadata": "0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.6",
		"ts-jest": "28.0.8",
		"typescript": "4.7.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,scss,yaml,yml}": [
			"prettier --write"
		]
	},
	"main": "dist/index.js",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
